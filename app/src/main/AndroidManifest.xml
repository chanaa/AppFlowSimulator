<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hps.esecure.appflowsimulator">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".WelcomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="com.package.name.MyActivity" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ChallengeActivity"
            android:label="@string/title_activity_challenge" android:windowSoftInputMode="stateHidden"/>
        <activity
            android:name=".ErrorActivity"
            android:label="Error" android:windowSoftInputMode="stateHidden"/>
        <activity
            android:name=".SuccessActivity"
            android:label="Authentication result" />
        <activity android:name=".settings.SettingsActivity" android:windowSoftInputMode="stateHidden"/>
        <activity android:name=".AuthenticationActivity" android:windowSoftInputMode="stateHidden"/>
    </application>

</manifest>